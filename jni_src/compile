!/bin/zsh

SDK_ROOT="$(xcrun --show-sdk-path)"
JDK="$(/usr/libexec/java_home)"
gcc -I${SDK_ROOT}/System/Library/Frameworks/JavaNativeFoundation.framework/Versions/A/Headers -I${JDK}/include -I${JDK}/include/darwin -Ifsws/include -arch x86_64 -o libmacattrs.dylib -dynamiclib -framework JavaNativeFoundation -framework Foundation -framework CoreServices -framework AppKit *.m fsws/*.c